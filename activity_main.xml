<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efe4c2"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/tigerlilylogo"/>

    <ImageView
        android:id="@+id/dog1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/logo"
        android:scaleType="centerCrop"
        android:src="@drawable/dog1"
       />

    <ImageView
        android:id="@+id/dog3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/dog1"
        android:scaleType="centerCrop"
        android:src="@drawable/dog3"/>

    <ImageView
        android:id="@+id/dog4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/dog3"
        android:scaleType="centerCrop"
        android:src="@drawable/dog4"/>

    <ImageView
        android:id="@+id/dog2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/dog4"
        android:scaleType="centerCrop"
        android:src="@drawable/dog2"/>

    <TextView
        android:id="@+id/motto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_toRightOf="@id/dog1"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Where the Comfort and Safety of your Pet is our First Priority"
        android:textColor="#e57216"
        android:textSize="27dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/dog2"
        android:layout_toRightOf="@id/dog4"
        android:paddingTop="8dp"
        android:text="Contact Us"
        android:textColor="#357299"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact"
        android:layout_toRightOf="@id/dog1"
        android:text="275 Rt. 25A \nMiller Place, N.Y. 11764\n 631-403-4633"
        android:textColor="#357299"/>

    <TextView
        android:id="@+id/grooming"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/motto"
        android:layout_toRightOf="@id/dog1"
        android:gravity="center"
        android:paddingTop="24dp"
        android:text="GROOMING"
        android:textColor="#357299"
        android:textSize="22dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/treat"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/grooming"
        android:layout_toRightOf="@id/grooming"
        android:gravity="center"
        android:paddingTop="24dp"
        android:text="We Treat Every Dog As if They Were Our Own"
        android:textColor="#e57216"
        android:textSize="22dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grooming"
        android:layout_toEndOf="@+id/dog3"
        android:layout_toRightOf="@+id/dog3"
        android:gravity="center"
        android:text="We offer expert grooming while maintaining a clean, safe environment"
        android:textColor="#357299"
        android:textSize="22dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/treat"
        android:layout_toRightOf="@id/address"
        android:scaleType="centerCrop"
        android:src="@drawable/dog5"/>


</RelativeLayout>
</ScrollView>
